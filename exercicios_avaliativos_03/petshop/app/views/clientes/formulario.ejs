<% include ../layout/head %>
<body>

   <!-- MENU -->
   <% include ../menu/menu %>
   <img src="images/logo-web2.png" id="imgTopoTela">

   <!-- FORMULARIO DE CADASTRO -->
    <% if( cliente.length > 0 ) { %>
        <form action="/cliente/editar" method="POST">
    <% } else {  %>
        <form action="/cliente/salvar" method="POST">
    <% } %>

        <h1 id="titleTela">Cadastro de Cliente</h1>
        <div id="centro" >  

            <!-- ID / Campos está invisivel-->
            <input type="hidden" name="id" value="<%= (cliente.length > 0) ? cliente[0].id : '' %>">
                
            <!-- NOME -->
            <div class="form-group col-md-6" id="divNome">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" value="<%= (cliente.length > 0) ? cliente[0].nome : '' %>" class="form-control" placeholder="Nome">
            </div>

            <!-- CPF  -->
            <div class="form-group col-md-6 " id="divCpf">
                <label for="cpf">CPF</label>
                <input type="text" maxlength="11" id="cpf" name="cpf" value="<%= (cliente.length > 0) ? cliente[0].cpf : '' %>" class="form-control" placeholder="Ex: 00000000000">
            </div>

            <!-- EMAIL -->
            <div class="form-group col-md-6" id="divEmail">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" value="<%= (cliente.length > 0) ? cliente[0].email : '' %>" class="form-control" placeholder="Email">
            </div>

            <!-- NASCIMENTO -->
            <div class="form-group col-md-6" id="divDataNasc">
                <label for="nascimento">Nascimento</label>
                <input type="date" id="nascimento" name="nascimento" value="<%= (cliente.length > 0) ? cliente[0].nascimento : '' %> " class="form-control">
            </div>                                                   

            <!-- TELEFONE -->
            <div class="form-group col-md-6" id="divTel">
                <label for="telefone">Telefone</label>
                <input type="tel" id="telefone" name="telefone" value="<%= (cliente.length > 0) ? cliente[0].telefone : '' %>" class="form-control form-control"  placeholder="Ex.: 34319800">
            </div>          

            <!-- ENDEREÇO -->
            <div class="form-group col-md-6" id="divEndereco">
                <label for="endereco">Endereço</label>
                <input type="text" id="endereco" name="endereco" value="<%= (cliente.length > 0) ? cliente[0].endereco : '' %>" class="form-control" placeholder="Cidade, Rua, n°">
            </div>

            <!-- BOTÃO -->
            <div class="posicao-botao-salvar-formulario"> 
                <input type="submit" value="Salvar" class="btnAlteracoes btn-lg btn-primary">
            </div>
        </div>
    </form>
</body>
</html>